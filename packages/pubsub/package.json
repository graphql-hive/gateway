    "type": "git",
    "url": "git+https://github.com/graphql-hive/gateway.git",
    "directory": "packages/pubsub"
  },
  "author": {
    "email": "contact@the-guild.dev",
    "name": "The Guild",
    "url": "https://the-guild.dev"
  },
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "./dist/index.js",
