{
  "$schema": "https://codesandbox.io/schemas/tasks.json",
  "setupTasks": [
    {
      "name": "Install",
      "command": "npm i"
    },
    {
      "name": "Services",
      "command": "npm run services &"
    },
    {
      "name": "Wait",
      "command": "sleep 3"
    },
    {
      "name": "Compose",
      "command": "npm run compose"
    }
  ],
  "tasks": {
    "gateway": {
      "name": "Start Hive Gateway",
      "runAtStart": true,
      "command": "npm run gateway",
      "preview": {
        "port": 4000
      }
    }
  }
}
